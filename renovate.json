{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "devDependencies (non-major)"
    }
  ],
  "schedule": ["before 5am on the first day of the month"],
  "ignoreDeps": [
    "vite",
    "@vitejs/plugin-vue",
    "vue",
    "cypress"
  ],
  "ignorePaths": ["**/.circleci/**"]
}
